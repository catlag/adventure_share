<%= stylesheet_link_tag "access" %>
<div class="row">
	<div class="twelve columns">
		<div class="row">
			<section class= 'sideNav two columns push-one' >
				<nav id="sidebar-nav-holder" class="vertical-nav fixed" gumby-fixed="40" gumby-top="40" >
					<ul id="sidebar-nav">

							<li class="active text-center sideText"><%= link_to "Logo", index_path%></li>  


					</ul>
				</nav>
			</section>

			 <div class="six columns push-three text-centered">
			    <h1>Login</h1>
					<% flash.each do |key, value| %>
					  <% if key == "notice" %>
					    <%= content_tag :div, value, class: "text-center secondary alert"%>
					  <% elsif key == "alert" %>
					    <%= content_tag :div, value, class: "text-center danger alert" %>
					  <% else %>
					    <%= content_tag :div, value, class: "text-center success alert" %>
					  <% end %>
				<% end %>
					  <%= form_tag(login_path) do %>
					<ul class="field">
					  <%= label_tag(:username)%>
					  <%= text_field_tag(:username, params[:username], autofocus: true, class: "input")%>
					</ul>
					<ul class="field">
					  <%= label_tag(:password)%>
					  <%= password_field_tag(:password, nil, class: "input")%>
					</ul>
					<p>
					  <%= submit_tag("Log in", class: "large default btn") %>
					</p>
					<% end %>

					<%= link_to "Don't have an account? Sign up here", signup_path, class: "link"%>

			  </div>
		</div>
	</div>
</div>
