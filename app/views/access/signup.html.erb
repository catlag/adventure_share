<%= stylesheet_link_tag "access" %>

<div class="row navbar pretty"  gumby-fixed="top" id="nav1">
  <!-- Toggle for mobile navigation, targeting the <ul> -->
  <a class="toggle" gumby-trigger="#nav1 > ul" href="#"><i class="icon-menu"></i></a>
  <h1 class="ten columns logo">
    <%= link_to "Logo", index_path%>
  </h1>
  <ul class="two columns">
    <li><%= link_to "Home", home_path%></li>
</div>
<!-- -------------------------- -->
<div class="row">
	<div class="centered ten columns">
		<% flash.each do |key, value| %>
		  <% if key == "notice" %>
		    <%= content_tag :div, value, class: "text-center secondary alert"%>
		  <% elsif key == "alert" %>
		    <%= content_tag :div, value, class: "text-center danger alert" %>
		  <% else %>
		    <%= content_tag :div, value, class: "text-center success alert" %>
		  <% end %>
		<% end %>
	</div>
</div>

<!-- -------------------------- -->
<div class="row">
	<div class="centered ten columns">
		<h1>Signup</h1>

		<% if @user.errors.any? %>
		  <% @user.errors.full_messages.each do |error| %>
		    <p class = "text-danger"><%= error %></p>
		  <% end %>
		<% end %>


		<%= form_for(@user, url: signup_path) do |f|%>

		<ul class="field">
		  <%= f.label(:username) %>
		  <%= f.text_field(:username, autofocus: true, class: "input") %>
		</ul>
		<ul class="field">
		  <%= f.label(:password) %>
		  <%= f.password_field(:password, class: "input") %>
		</ul>
		<p>
		  <%= f.submit("Signup", class: "medium default btn") %>
		</p>
		  <%= link_to "Have an account already? Log in here", login_path %>
		<% end %>
	</div>
</div>